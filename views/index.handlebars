<div class="container">
    <div class="row justify-content-center" id="imgDiv">
    <img src="burger.png" class="img-fluid" alt="Responsive image">
    </div>
    <div class="row justify-content-center">
        <div class="col-4">
            <h1 class="text-center">Eat-Da-Burger!</h1>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-4">
            <h4>Ready to eat!</h4>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}

                    <button class="devour-burger" data-id="{{id}}">
                        Devour it!
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-4">
            <h4>Devoured!</h4>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-4">
            <h4>Add a burger:</h4>
            <form class="create-form">

                <div class="form-group">
                    <textarea type="text" id="burger_name" name="burger_name"></textarea>
                </div>

                <button type="submit">Submit</button>
                <p>Enter a burger you want to eat click the "Submit" button</p>
            </form>
        </div>
    </div>
</div>