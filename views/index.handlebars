<h1>Eat-Da-Burger!</h1>

<h2>Ready to eat!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{burger_name}}

        <button clss="devour-burger" data-id="{{id}}">
            Devour it!
        </button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}}
    {{/each}} 
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <input type="text" id="burger_name" name="burger_name">
    </div>

    <button type="submit">Submit</button>
    <p>Enter a burger you want to eat click the "Submit" button</p>
</form>